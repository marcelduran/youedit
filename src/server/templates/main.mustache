<!doctype html>
<html lang="{{=lang=}}">
<head>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="{{=&cdn=}}/css/styles.css">
</head>
<body class="{{=mode=}}">

  <div id="doc">

    <div id="main">

      <div id="head">
        <h1 class="logo"><b>YOUED</b>IT</h1>
        <div class="m-watch">
          <h2>{{mixTitle}}</h2>
          <a href="remix" role="button">{{_remix_}}</a>
        </div>
        <div class="m-edit">
          <form>
            <input type="text" id="mix-title" placeholder="{{_mix_title_}}" maxlength="100">
            <input id="preview" type="submit" value="{{_preview_}}">
          </form>
        </div>
      </div><!-- main -->

      <div id="video">
        <div class="box-message">
          <h2 class="heading">{{_edit_heading_}}</h2>
          <h3 class="message">{{_&edit_message_}}</h3>
        </div>
      </div><!-- video -->

      <div id="social" class="m-watch">
        <ul>
          <li id="twitter">twitter</li>
          <li id="facebook">facebook</li>
          <li id="gplus">google+</li>
          <li class="icon-link"><input type="text" id="link" spellcheck="false" value="http://do.youed.it/Sykt56s"></li>
        </ul>
        <span id="views">{{_&views_}}</span>
        <div id="share">
          <div class="box-message">
            <h2 class="heading">{{_share_heading_}}</h2>
            <h3 class="message">{{_share_message_}}</h3>
          </div>
          <a class="close icon-close" role="button" href="#close"></a>
        </div>
      </div><!-- social -->

    </div><!-- main -->

    <div id="search" class="m-landing m-edit s-video">
      <form>
        <div class="m-edit">
          <a class="source icon-video" href="#source"></a>
          <a class="source icon-audio" href="#source"></a>
          <a class="source icon-film" href="#source"></a>
          <div class="baloon">
            <a class="s-video" href="#video"><i class="icon-video"></i>{{_video_}}</a>
            <a class="s-audio" href="#audio"><i class="icon-audio"></i>{{_sound_and_music_}}</a>
            <a class="s-mix" href="#mix"><i class="icon-film"></i>{{_used_in_this_mix_}}</a>
          </div>
          <label>{{_videos_and_music_}}</label>
        </div>
        <input type="text" id="query" autocomplete="off">
        <input id="mix" class="m-landing" type="submit" value="{{_mix_}}">
      </form>
      <div id="results" class="m-edit"></div>
    </div><!-- search -->

  </div><!-- doc -->

  <div id="track" class="m-edit block">
    <input id="duration" class="centered" value="2:34">
  </div>

  <div id="timeline" class="m-landing m-edit">
    <div class="container">
      <div class="m-landing">
        <h2 class="heading">{{_landing_heading_}}</h2>
        <h3 class="message">{{_&landing_message_}}</h3>
      </div>
      <div class="m-edit">
        <ul class="timemarks"></ul>
        <div id="video-track" class="empty">
          <h2><i class="icon-video"></i>{{_&empty_video_timeline_}}</h2>
          <ul></ul>
        </div>
        <div id="audio-track" class="empty">
          <h2><i class="icon-audio"></i>{{_&empty_audio_timeline_}}</h2>
          <ul></ul>
        </div>
      </div>
    </div>
  </div><!-- timeline -->

  <div id="comments" class="m-watch">comments</div>

  <div id="footer">
    <p>{{_copyright_}}</p>
    <ul>
      <li><a href="#about">{{_about_}}</a></li>
      <li><a href="#privacy">{{_privacy_}}</a></li>
      <li><a href="#terms">{{_terms_}}</a></li>
      <li><a href="#help">{{_help_}}</a></li>
    </ul>
  </div><!-- footer -->

  <script>
    (function(){
      function edit() {
        document.getElementById('query')
          .removeEventListener('keydown', edit, false);
        document.body.className = 'edit';
      }
      document.getElementById('query').addEventListener('keydown', edit, false);
    }());
  </script>

  <script src="{{=&cdn=}}/js/jquery/jquery.js"></script>
  <script src="{{=&cdn=}}/js/jquery-ui/jquery-ui.js"></script>
  <script src="{{=&cdn=}}/js/requirejs/require.js" data-main="js/app"></script>
</body>
</html>
